<% if user_signed_in?%>

  <%= search_form_for @q do |form| %>
    <div class="form-group">
      <%= form.text_field :car_name_cont,class:"form-control",placeholder:"Search by Car" %>
      <%= form.submit%>
    </div>
  <%end%>

  <li class="py-4">
    <p style="color: green"><%= notice %></p>
  </li>

  <li class="py-4">
    <h3>Cars</h3>
  </li>

  <!-- More items... -->

  <li class="py-4">
    <div id="cars" class="md-flex grid-cols-1 justify-items-center">
      <table class="table-auto">
        <thead class="bg-amber-400">
        <tr>
          <th>Make</th>
          <th>Car</th>
          <th>View</th>
        </tr>
        </thead>
        <tbody class="bg-amber-100">
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.brand.name %></td>
            <td><%= car.car_name %></td>
            <td><%= link_to "Show this car",  car, class: 'blue-link' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </li>

  <%# can make new car only if the signed in user is admin%>
  <%if user_signed_in? && current_user.is_admin %>
    <li class="py-4">
      <%= link_to "New car", new_car_path, class: 'blue-link' %>
    </li>
  <%end%>
<%end%>



