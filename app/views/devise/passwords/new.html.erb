<div class="bg-gray-800 text text-green-500 text-center">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<div class="bg-gray-800 text-white text-center content-center pb-10">
  <p class="text-2xl font-semibold">Forgot your password?<p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field w-1/3 mx-auto mt-3">
    <%= f.label :email  %><br />
    <%= f.email_field :email,placeholder:"email" , autofocus: true, autocomplete: "email",class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 text-black pl-4 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"  %>
  </div>

  <div class="button bg-indigo-600 rounded-md p-2 mx-auto my-4 text-white max-w-min ">
    <%= f.submit "Send me reset password instructions" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
