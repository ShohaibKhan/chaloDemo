<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :fname,"First Name*" %><br />
    <%= f.text_field :fname, autofocus: true, autocomplete:"fname",required:true %>
  </div>

  <div class="field">
    <%= f.label :sname,"Last Name" %><br />
    <%= f.text_field :sname, autofocus: true, autocomplete:"sname" %>
  </div>


  <div class="field">
    <%= f.label :email,"Email*" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",required:true %>
  </div>

  <div class="field">
    <%= f.label :phno,"Phone Number*" %><br />
    <%= f.text_field :phno, autofocus: true, autocomplete: "phno" ,required:true%>
  </div>

  <div class="field">
    <%= f.label :password,"password*" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"password_confirmation*" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
